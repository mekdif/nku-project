<div class="container">
<div class="page-header">
  <h1>Teams</h1>
</div>
<div class="team_container">
  <% @teams.each do |team| %>
    <div id="<%= dom_id(team) %>" >
      <%= link_to team_path(team) do %>
        <div class="info-block">
          <div class="avatar" style='background-image: url(<%= team.image_url %>)'></div>
          <h4><%= team.full_name %></h4>
          <p><em>(<%= team.abbreviation %>)</em></p>   
        </div>
      <% end %>
      
    </div>
  <% end %>
</div>
</div>
<br>