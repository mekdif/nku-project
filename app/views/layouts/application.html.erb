<!DOCTYPE html>
<html>
<head>
  <title>NKU Project</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <div class="navbar-brand">
        <%= link_to "Home", root_path %>
      </div>
    </div>
  <% if current_user %>
  <div class="navbar-brand">
 	<%= link_to "Team Information", teams_path %> 
  </div>
 	<div class="collapse navbar-collapse navbar-right">
    <%= link_to "Sign out", sign_out_path, class: "btn btn-default navbar-btn"%>  
 	</div>  
  <%else%>
    <%= link_to "Sign up", new_user_path, class: "btn btn-default navbar-btn" %>
    <%= link_to "Sign in", new_session_path, class: "btn btn-primary navbar-btn" %>
<% end %>
   </div>
  </nav>
<div class = "container"> 
<div class="tempContainer">
<% flash.each do |key, value| %>
  <div class="flash <%= flash_class(key) %> push--top">
  <%= value %>
  </div>
<% end %>

<%= yield %>
</div>
</div>
</body>
</html>
